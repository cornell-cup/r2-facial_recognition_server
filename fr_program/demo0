import face_recognition

face_encoding_set = []

# import all the images of the headshot
def import_headshot_set():
    print("Start importing headshot...")
    rong_image = face_recognition.load_image_file("rong.jpeg")
    biden_image = face_recognition.load_image_file("biden.jpg")
    obama_image = face_recognition.load_image_file("obama.jpg")
    try:
        temp_encoding = face_recognition.face_encodings(rong_image)[0]
        face_encoding_set.append(temp_encoding)
        temp_encoding = face_recognition.face_encodings(biden_image)[0]
        face_encoding_set.append(temp_encoding)
        temp_encoding = face_recognition.face_encodings(obama_image)[0]
        face_encoding_set.append(temp_encoding)
    except IndexError:
        print("I wasn't able to locate any faces in at least one of the images. Check the image files. Aborting...")
    print("Headshot imported!")

def recognize_face():
    test_image = face_recognition.load_image_file("test.jpeg")
    test_face_encoding = face_recognition.face_encodings(test_image)[0]
    # results is an array of True/False telling if the unknown face matched anyone in the known_faces array
    results = face_recognition.compare_faces(face_encoding_set, test_face_encoding)
    for i in range(len(results)):
        print("The test is same as person")
        print(i)
        print(results[i])

import_headshot_set()
recognize_face()

